@model IEnumerable<DoAn.Web.Models.LaudatoryViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var controlPanel = ViewBag.ControPanel;
    var listDonations = (IEnumerable<DoAn.Web.Models.DonationViewModel>)ViewBag.donationViewModel;
 }

@if (controlPanel != null)
{
    <div class="bs-example">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Họ và tên</th>
                    <th>Lớp</th>
                    <th>Số tiền</th>
                    <th>Địa chỉ</th>
                    <th>Ghi chú</th>
                </tr>
            </thead>
            <tbody>
                @{var i = 0;}
                @foreach (var item in listDonations)
                {
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@item.Name</td>
                        <td>@item.Class</td>
                        <td>@item.Price</td>
                        <td>@item.Address</td>
                        <td>@item.Note</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
                    }
                    else
                    {
                        <div class="bs-example">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Họ và tên</th>
                                        <th>Lớp</th>
                                        <th>Danh hiệu</th>
                                        <th>Số quyển vở</th>
                                        <th>Ghi chú</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{var j = 0;}
                                    @foreach (var item in Model)
                {
                    j++;
                                        <tr>
                                            <td>@j</td>
                                            <td>@item.Name</td>
                                            <td>@item.Class</td>
                                            <td>@item.Appellation</td>
                                            <td>@item.CountBook</td>
                                            <td>@item.Note</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                                        }